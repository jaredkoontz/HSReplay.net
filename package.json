{
	"name": "hsreplaynet",
	"private": true,
	"scripts": {
		"build": "cross-env NODE_ENV=production webpack --bail",
		"dev": "webpack-dev-server",
		"test": "jest",
		"lint": "yarn lint:prettier; yarn lint:tslint",
		"lint:prettier": "prettier -l \"hsreplaynet/static/{scripts,styles}/**/*.{ts,tsx,js,scss}\"",
		"lint:tslint": "tslint \"hsreplaynet/static/scripts/src/**/*\" --project tsconfig.json",
		"format": "yarn format:tslint; yarn format:prettier",
		"format:prettier": "prettier --write \"hsreplaynet/static/{scripts,styles}/**/*.{ts,tsx,js,scss}\"",
		"format:tslint": "tslint \"hsreplaynet/static/scripts/src/**/*\" --project tsconfig.json --fix",
		"i18n:build": "tsc --outDir \"build/generated/locale-extract\" --target es2017 --sourceMap false --jsx preserve",
		"i18n:extract": "i18next-scanner --config locale/i18next-scanner.config.js --output locale/hsreplaynet/frontend/ \"build/generated/locale-extract/**/*.js{,x}\"",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
