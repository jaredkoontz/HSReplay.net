		"@types/react": "^16.4.14",
		"@types/react-dom": "^16.0.7",
		"@types/react-i18next": "^7.8.3",
		"@types/react-virtualized": "^9.7.10",
		"@types/stripe": "^5.0.5",
		"@types/stripe-checkout": "^1.0.1",
		"@types/victory": "^0.9.18",
